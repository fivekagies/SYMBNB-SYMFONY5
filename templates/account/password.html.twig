{% extends 'base.html.twig' %}


{% block title %}Modification de mot de passe de l'utilisateur{% endblock %}

{% block body %}
    <div class="container clearfix">
        <h1 class="my-5">Modification de mot de passe</h1>
        {{ form_start(form) }}

        {{ form_widget(form) }}
        <button class="btn btn-primary float-right" type="submit">
            <i class="fas fa-check"></i>
            Modifier le mot de passe
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
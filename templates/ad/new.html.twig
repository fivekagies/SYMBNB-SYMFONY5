{% extends 'base.html.twig' %}
{% block title %} Création d'une annonce {% endblock %}

{% form_theme form 'ad/_collection.html.twig' %} {# utiliser le theme pour le formuaire form et ce theme (definit dans ce fichier
                                                                )se trouve dans le meme fichier(self)  #}

{% block body %}
<div class="container">
    <h1 class="my-5">Créer une nouvelle annonce</h1>
    {# {{ form(form) }} #} {# c l'equivalent de form_start, form_widget et form_end#}
    {{ form_start(form) }}

        {#<div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': { 'class': 'form-control', 'placeholder': "Titre de l'annonce"  } } ) }}
        </div>

        <div class="form-group">
            {{ form_label(form.introduction) }}
            {{ form_widget(form.introduction, {'attr': { 'class': 'form-control', 'placeholder': "Titre de l'introduction"  } }) }}
        </div>#}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Informations générales</h2>
                    <hr>
                    {{ form_row(form.title) }}
                    {{ form_row(form.slug) }}
                    {{ form_row(form.price) }}
                    {{ form_row(form.rooms) }}

                </div>
                <div class="alert alert-light">
                    <h2>Détals de l'annonce</h2>
                    <hr>
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.content) }}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2>Images de l'annonce</h2>
                    <hr>
                    {{ form_row(form.coverImage) }}
                    {{ form_row(form.images) }}
                </div>
            </div>
        </div>
    {#{{ form_widget(form) }}#}
        <div class="alert alert-success clearfix">
            <h2 class="alert-heading">Sauvegarder mon annonce</h2>
            <p>Vous êtes sur le point de créer une annonce, nous somme super fier de vous !</p>
            <button type="submit" class="btn btn-primary float-right">
               <i class="fas fa-check"></i> Créer la nouvelle annonce
            </button>
        </div>

    {{ form_end(form) }}


</div>
{% endblock %}



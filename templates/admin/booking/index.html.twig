{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des réservation</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th class="text-center">Durée</th>
                <th class="text-center">Montant</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createdAt | date('d/m/Y H:i') }}</td>
                    <td>
                        <img src="{{ booking.booker.picture }}" class="avatar avatar-mini"
                             alt="L'avatar de {{ booking.booker.fullName }}">
                        {{ booking.booker.fullName }}
                    </td>
                    <td>{{ booking.ad.title }}</td>
                    <td class="text-center">{{ booking.duration }}</td>
                    <td class="text-center">{{ booking.amount }} &euro;</td>

                    <td>
                        <a href="{{ path('admin_bookings_edit', {'id': booking.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                        <a href="" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
